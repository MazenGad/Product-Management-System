@{
    ViewData["Title"] = "Add New Product";
    @model Product_Management_System.DTOs.Product.AddProductDto
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">
                    <i class="fas fa-plus icon-green"></i> Add New Product
                </h4>
            </div>
            <div class="card-body">
                <form id="productForm">
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Unit</label>
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Initial Quantity</label>
                        <input asp-for="InitialQuantity" class="form-control" />
                        <span asp-validation-for="InitialQuantity" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add Product</button>
                </form>

                <div id="message" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $("#productForm").submit(function (e) {
            e.preventDefault();
            
            var form = $("#productForm");

            if (!form.valid()) {
                return;
            }
            var formData = {
                name: $("input[name='Name']").val(),
                unit: $("input[name='Unit']").val(),
                price: parseFloat($("input[name='Price']").val()),
                initialQuantity: parseInt($("input[name='InitialQuantity']").val())
            };

            $.ajax({
                type: "POST",
                url: "@Url.Action("Create", "Product")",
                contentType: "application/json",
                data: JSON.stringify(formData),
                success: function (response) {
                    if (response.success) {
                        $("#message").html(`<div class="alert alert-success">${response.message}</div>`);
                         form[0].reset();
                         form.find(".text-danger").empty(); 
                    } else {
                        $("#message").html(`<div class="alert alert-danger">${response.message}</div>`);
                    }
                },
                error: function () {
                    $("#message").html(`<div class="alert alert-danger">Unexpected error occurred.</div>`);
                }
            });
        });
    </script>
}
